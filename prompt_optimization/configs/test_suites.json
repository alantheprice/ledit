{
  "test_suites": {
    "coding_basic": {
      "name": "Basic Coding Tasks",
      "description": "Simple programming tasks to test code generation",
      "test_cases": [
        "coding/factorial.json",
        "coding/fibonacci.json", 
        "coding/prime_check.json",
        "coding/sort_array.json"
      ],
      "timeout_seconds": 30,
      "runs_per_test": 3
    },
    "coding_advanced": {
      "name": "Advanced Coding Tasks", 
      "description": "Complex programming challenges",
      "test_cases": [
        "coding/web_server.json",
        "coding/concurrent_worker.json",
        "coding/database_migration.json"
      ],
      "timeout_seconds": 60,
      "runs_per_test": 2
    },
    "analysis": {
      "name": "Code Analysis Tasks",
      "description": "Understanding and explaining existing code",
      "test_cases": [
        "analysis/explain_algorithm.json",
        "analysis/find_bugs.json",
        "analysis/optimize_performance.json"
      ],
      "timeout_seconds": 45,
      "runs_per_test": 2
    },
    "creative": {
      "name": "Creative Problem Solving",
      "description": "Open-ended and creative tasks",
      "test_cases": [
        "creative/system_design.json",
        "creative/api_design.json", 
        "creative/architecture_proposal.json"
      ],
      "timeout_seconds": 90,
      "runs_per_test": 1
    },
    "quick_benchmark": {
      "name": "Quick Performance Benchmark",
      "description": "Fast baseline comparison",
      "test_cases": [
        "coding/factorial.json",
        "analysis/explain_algorithm.json"
      ],
      "timeout_seconds": 20,
      "runs_per_test": 1
    }
  },
  "evaluation_criteria": {
    "performance": {
      "weight": 0.25,
      "metrics": ["response_time", "token_efficiency"]
    },
    "quality": {
      "weight": 0.40,
      "metrics": ["correctness", "completeness", "code_quality"]
    },
    "usability": {
      "weight": 0.25,
      "metrics": ["clarity", "format", "helpfulness"]
    },
    "cost": {
      "weight": 0.10,
      "metrics": ["token_cost", "time_cost"]
    }
  }
}