{
  "evaluation_framework": {
    "version": "1.0",
    "description": "Comprehensive evaluation system for prompt optimization"
  },
  "metrics": {
    "performance": {
      "response_time": {
        "weight": 0.15,
        "unit": "milliseconds",
        "scoring": {
          "excellent": "< 2000ms",
          "good": "2000-5000ms", 
          "acceptable": "5000-10000ms",
          "poor": "> 10000ms"
        }
      },
      "token_efficiency": {
        "weight": 0.10,
        "description": "Response quality per token used",
        "calculation": "quality_score / tokens_used"
      }
    },
    "quality": {
      "correctness": {
        "weight": 0.25,
        "description": "Technical accuracy and completeness",
        "criteria": [
          "syntax_correct",
          "logic_sound", 
          "requirements_met",
          "edge_cases_handled"
        ]
      },
      "code_quality": {
        "weight": 0.15,
        "description": "Code structure and best practices",
        "criteria": [
          "readable_code",
          "proper_naming",
          "good_structure",
          "follows_conventions"
        ]
      },
      "completeness": {
        "weight": 0.10,
        "description": "How fully the response addresses the request",
        "scoring": {
          "complete": 100,
          "mostly_complete": 80,
          "partial": 60,
          "incomplete": 30
        }
      }
    },
    "usability": {
      "clarity": {
        "weight": 0.15,
        "description": "How clear and understandable the response is",
        "criteria": [
          "clear_explanations",
          "logical_flow",
          "appropriate_detail",
          "good_formatting"
        ]
      },
      "helpfulness": {
        "weight": 0.10,
        "description": "Practical value to the user",
        "criteria": [
          "actionable_advice",
          "relevant_examples",
          "useful_context",
          "addresses_intent"
        ]
      }
    }
  },
  "scoring_system": {
    "scale": {
      "min": 0,
      "max": 100
    },
    "thresholds": {
      "excellent": 90,
      "good": 75,
      "acceptable": 60,
      "needs_improvement": 40,
      "poor": 0
    },
    "aggregation": "weighted_average"
  },
  "automatic_checks": {
    "code_tasks": {
      "syntax_validation": {
        "enabled": true,
        "languages": ["go", "python", "javascript", "typescript"]
      },
      "function_detection": {
        "enabled": true,
        "patterns": {
          "go": "func\\s+\\w+",
          "python": "def\\s+\\w+",
          "javascript": "function\\s+\\w+|\\w+\\s*=\\s*\\(.*\\)\\s*=>"
        }
      },
      "import_detection": {
        "enabled": true,
        "check_relevant_imports": true
      }
    },
    "general_quality": {
      "length_check": {
        "enabled": true,
        "min_chars": 50,
        "max_chars": 5000,
        "optimal_range": [200, 2000]
      },
      "structure_check": {
        "enabled": true,
        "check_formatting": true,
        "check_organization": true
      }
    }
  },
  "human_evaluation": {
    "enabled": false,
    "criteria": [
      "overall_satisfaction",
      "would_use_in_production",
      "clarity_rating",
      "creativity_rating"
    ],
    "scale": {
      "min": 1,
      "max": 5
    }
  },
  "reporting": {
    "include_raw_scores": true,
    "include_comparative_analysis": true,
    "include_improvement_suggestions": true,
    "generate_charts": false,
    "export_formats": ["json", "csv", "markdown"]
  }
}